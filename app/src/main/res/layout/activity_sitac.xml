<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.istic.tdf.dfclient.activity.SitacActivity">

    <!-- Map Container -->
    <FrameLayout android:id="@+id/sitac_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"  />

    <!-- Toolbar -->
    <FrameLayout android:id="@+id/toolbar_container"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="top|left" />

    <!-- Form -->
    <FrameLayout android:id="@+id/contextual_drawer_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="top|right">
    </FrameLayout>

    <FrameLayout android:id="@+id/gallery_drawer_container"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_gravity="top|right">
    </FrameLayout>

</FrameLayout>
