<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="edu.istic.tdf.dfclient.fragment.InterventionDetailFragment">

    <LinearLayout
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2"
            android:layout_weight="50">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:text="Adresse"
                    android:textSize="14sp"/>


                <TextView
            android:id="@+id/intervention_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:textSize="16sp"
            android:text=""
            android:textStyle="bold"/>

                <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="Nom de code"
            android:textSize="14sp"/>

                <TextView
                    android:id="@+id/intervention_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="Date"
            android:textSize="14sp"/>

                <TextView
            android:id="@+id/intervention_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:textSize="16sp"
            android:text=""
            android:textStyle="bold"/>
            </LinearLayout>
        </ScrollView>

        <ListView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:id="@+id/validation_table"
            android:layout_weight="50" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intervention_archive_button"
            android:id="@+id/interventionArchiveButton"
            android:layout_weight="20" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intervention_selection_button"
            android:id="@+id/interventionSelectionButton"
            android:layout_weight="80" />

    </LinearLayout>

</FrameLayout>
